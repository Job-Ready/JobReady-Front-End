{
  "compilerOptions":{
     "outDir":"./dist",
     "sourceMap":true,
     "strictNullChecks":true,
     "module":"es6",
     "jsx":"react-jsx",
     "target":"es6",
     "allowJs":true,
     "allowSyntheticDefaultImports":true,
     "esModuleInterop":true,
     "skipLibCheck":true,
     "moduleResolution":"node",
     "forceConsistentCasingInFileNames":true,
     "paths":{
        "@components/*":[
           "./src/components/*"
        ],
        "@utils/*":[
           "./src/utils/*"
        ],
        "@pages/*":[
           "./src/pages/*"
        ],
        "types/*":[
           "./src/types/*"
        ]
     }
  },
  "include":[
     "./src",
     "./src/types"
  ],
  "exclude":[
     "node_modules",
     "*/.spec.ts"
  ]
}
